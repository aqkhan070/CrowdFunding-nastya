    <script>
        function sendSubscription()
        {
            var i = 0;
            var Fname = $("#subs_Firstname").val();
            var Lname = $("#subs_Lastname").val();
            var email = $("#subs_email").val();

            $("#subs_Firstname").removeClass("is-invalid");
            $("#subs_email").removeClass("is-invalid");
            $("#subs_Lastname").removeClass("is-invalid");


            //$("#text-Firstname").fadeOut();
            //$("#text-semail").fadeOut();
            //$("#text-Lastname").fadeOut();
            $("#text-semail1").fadeOut();


            if (Fname.trim() == "" ) {
                //$("#text_Firstname").fadeIn();
                $("#subs_Firstname").addClass("is-invalid");
                i = 1;
            }
            if (Lname.trim() == "") {
               // $("#text-Lastname").fadeIn();
                $("#subs_Lastname").addClass("is-invalid");
                i = 1;
            }
            if (email.trim() == "" ) {
               // $("#subs_email").fadeIn();
                $("#subs_email").addClass("is-invalid");
                i = 1;
            }





                var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
                if (!expr.test(email)) {
                    $("#text-semail1").fadeIn();
                    $("#subs_email").removeClass("is-valid");
                    i = 1;
                }



            if (i == 0) {

                document.getElementById("btnsendSubscribe").innerHTML = " <img id='LoginLoader' style='Width: 34px!important; height: 30px!important' src='/assets/assets/img/loaders.gif' /> &nbsp; Please Wait...";
                document.getElementById("btnsendSubscribe").style.backgroundColor = 'black';
                document.getElementById("btnsendSubscribe").style.borderColor = "black";
                document.getElementById("btnsendSubscribe").disabled = true;
                document.getElementById("btnsendSubscribe").style.boxShadow = "0 0.125rem 0.25rem 0 rgb(0,0,0)";



                var UserInfo = {};
                UserInfo.email = email;
                UserInfo.name = Fname +" "+Lname;


                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Subscribe", "Home")',
                    data: JSON.stringify(UserInfo),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {

                        if (result.status == "1") {
                            $("#SuccessAlert1").show();
                            $("#FailureAlert1").hide();
                        }
                        else {
                            $("#SuccessAlert1").hide();
                            $("#FailureAlert1").show();
                        }


                        document.getElementById("btnsendSubscribe").innerHTML = "Subscribe to Our Newsletter";
                        document.getElementById("btnsendSubscribe").style.backgroundColor = '#47b2e4';
                        document.getElementById("btnsendSubscribe").style.borderColor = "#47b2e4";

                        document.getElementById("btnsendSubscribe").disabled = false;

                        $("#subs_Firstname").val("");
                        $("#subs_Lasttname").val("");
                        $("#subs_email").val("");
                    }
                });
            }
        }


