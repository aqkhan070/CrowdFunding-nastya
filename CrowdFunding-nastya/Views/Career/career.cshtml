﻿@model CrowdFunding_nastya.Models.tblCareer

@{
    ViewBag.Title = "career";
}
@{
    ViewBag.Title = "add";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<!-- start page title -->
@{
