﻿@model CrowdFunding_nastya.Models.tblBlog

@{
    ViewData["Title"] = "BlogPreview";
}


<!--  Banner START -->

<div class="banner">
    <div class="banner__overlay">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center text-lg-start">
                    <h1 class="global__title global__title-dark text-capitalize">blog detail</h1>
                    <ul class="banner__ul">
                        <li class="banner__ul-list p-0">
                            <a class="banner__ul-link" href="@Url.Action("index","Home")">
                                Home
                            </a>
                        </li>
                        <li class="banner__ul-list">
                            Blog Details
                        </li>
                    </ul>
                </div>
            </div>
            <div class="banner__element d-none d-lg-block">
                <img src="~/assets/assets/img/element-3.svg" alt="image">
            </div>
            <div class="banner__polygon d-none d-lg-block">
                <img src="~/assets/assets/img/polygon.svg" alt="image">
            </div>
        </div>
    </div>
</div>

<!--  Banner END -->
<!--  Blog_Detail START -->
@Html.HiddenFor(model => model.BlogId)

<div class="blog global__py pt-0">
    <div class="container p-sm-0">
        <div class="row">
            <div class="col-12 col-md-9 col-lg-8 text-center m-auto">
                <div class="mt-3">
                    <div>

                        <span class="global__text blog__detail-text">@Model.PublishDate.ToString("yyyy-MM-dd")</span>
                    </div>
                </div>
                <h2 class="global__heading blog__detail-m">
                    @Model.BlogTitle
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="blog__detail-head">
                <img class="img-fluid blog__detail-head--image" src="@Model.ThumbnailImage" alt="image" style="width:100%">
                <div class="col-12">
                    <div class="col-xl-8 m-auto position-relative">
                        <h3 class="global__heading blog__detail-m blog__detail-head--heading">
                            @Model.BlogTitle
                        </h3>
                        <div class="d-md-flex align-items-center">
                            <div class="d-flex align-items-center">
                                @foreach (var attachment in Model.tblBlogAttachedFiles)
                                {
                                    <img src="@attachment.AttachedFiles" class="img-fluid blog__detail-head--user" style="height:50%; width:50%" />
                                }
                                @*<img class="img-fluid blog__detail-head--user" src="~/assets/assets/img/user-13.png"
                                    alt="image">*@
                            </div>
                        </div>
                        <div class="d-flex mt-5">
                            <!-- Blog_Deetail Social Left -->
                            <div class="d-none d-lg-block position-absolute blog__detail-social">
                                <h4 class="blog__detail-social--text">share</h4>
                                <ul class="">
                                    <li>
                                        <a href="https://www.facebook.com/">
                                            <i class="fa fa-facebook blog__detail-social--fb"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://linkedin.com/">
                                            <i class="fa fa-linkedin blog__detail-social--in"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://twitter.com/">
                                            <i class="fa fa-twitter blog__detail-social--tw"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://www.instagram.com/">
                                            <i class="fa fa-instagram blog__detail-social--ins"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="">
                                <div class="">
                                    @Html.Raw(@Model.BlogDescription)
                                </div>
                            </div>
                        </div>
                        <div class="">
                            <!-- Blog_Deetail Social Bottom -->
                            <div class="blog__detail-social">
                                <p class="blog__detail-social--para">Like this article? Spread the word</p>
                                <ul class="d-flex gap-4 pb-4">
                                    <li class="m-0">
                                        <a href="#">
                                            <img class="img-fluid" src="~/assets/assets/img/share-icon.svg" alt="icon">
                                        </a>
                                    </li>
                                    <li class="m-0">
                                        <a href="https://www.facebook.com/">
                                            <i class="fa fa-facebook-f blog__detail-social--f"></i>
                                        </a>
                                    </li>
                                    <li class="m-0">
                                        <a href="https://twitter.com/">
                                            <i class="fa fa-twitter blog__detail-social--tw"></i>
                                        </a>
                                    </li>
                                    <li class="m-0">
                                        <a href="https://linkedin.com/">
                                            <i class="fa fa-linkedin blog__detail-social--in"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--  Blog_Detail END -->