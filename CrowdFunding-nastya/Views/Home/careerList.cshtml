@model IEnumerable<CrowdFunding_nastya.Models.tblCareer>

@{
    ViewBag.Title = "careerList";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    @{
        int totalCareer = Model.Count();
        int activeCareer = Model.Count(model => model.IsActive == true);
        int inActiveCareer = Model.Count(model => model.IsActive == false);

    }
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-semibold text-muted mb-0">Total Career</p>
                        <h2 class="mt-4 ff-secondary fw-semibold"><span class="counter-value" data-target="@totalCareer">0</span></h2>
                    </div>
                    <div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-4">
                                <i class="bx bx-server text-primary"></i>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-semibold text-muted mb-0">Active Career</p>
                        <h2 class="mt-4 ff-secondary fw-semibold"><span class="counter-value" data-target="@activeCareer">0</span></h2>
                    </div>
                    <div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-success-subtle text-success rounded-circle fs-4">
                                <i class="bx bx-server text-success"></i>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-semibold text-muted mb-0">In-Active Career</p>
                        <h2 class="mt-4 ff-secondary fw-semibold"><span class="counter-value" data-target="@inActiveCareer">0</span></h2>
                    </div>
                    <div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-4">
                                <i class="bx bx-server text-danger"></i>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Careers</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Career</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-lg-12">
        <div class="card" id="tasksList">
            <div class="card-header border-0">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Careers</h5>
                    <div class="flex-shrink-0">
                        <div class="d-flex flex-wrap gap-2">
                            <a href="@Url.Action("career", "Home")" class="btn btn-primary add-btn"><i class="ri-add-line align-bottom me-1"></i> Create New</a>
                            <button class="btn btn-soft-danger" id="remove-actions" onClick="deleteMultiple()"><i class="ri-delete-bin-2-line"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body border border-dashed border-end-0 border-start-0">
                <form>
                    <div class="row g-3">
                        <div class="col-xxl-5 col-sm-12">
                            <div class="search-box">
                                <input type="text" class="form-control search bg-light border-light" id="search-career" placeholder="Search for tasks or something...">
                                <i class="ri-search-line search-icon"></i>
                            </div>
                        </div>
                        <!--end col-->

                        <div class="col-xxl-3 col-sm-4">
                            <div class="input-light">
                                <select class="form-control" data-choices data-choices-search-false name="choices-single-default" id="idStatus">
                                    @*<option value="">Status</option>*@
                                    <option value="all" selected>All</option>
                                    <option value="true">Active</option>
                                    <option value="false">In-Active</option>
                                </select>
                            </div>
                        </div>
                        <!--end col-->
                        <!--end col-->
                    </div>
                    <!--end row-->
                </form>
            </div>
            <!--end card-body-->
            <div class="card-body">
                <div class="table-responsive table-card mb-4">
                    <table class="table align-middle table-nowrap mb-0" id="tasksTable">
                        <thead class="table-light text-muted">
                            <tr>
                                <th scope="col" style="width: 40px;">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                    </div>
                                </th>
                                <th class="sort" data-sort="id">ID</th>
                                <th class="sort" data-sort="blog_name">Name</th>
                                <th class="sort" data-sort="due_date">Priority</th>
                                <th class="sort" data-sort="status">Status</th>
                                <th class="sort" data-sort="status">Publish Date</th>
                                <th class="sort" data-sort="status">Action</th>
                            </tr>
                        </thead>
                        <tbody class="list form-check-all" id="careerTable">
                            @{
                                foreach (var item in Model)
                                {
                                    <tr class="career-row">
                                        <th scope="row">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="chk_child" value="option1">
                                            </div>
                                        </th>
                                        <td class="id"><a href="apps-tasks-details.html" class="fw-medium link-primary">@item.CareerId</a></td>
                                        <td>
                                            <img src="@item.CareerThumbnailImage" alt="" class="avatar-xs rounded-circle me-2">
                                            <a href="#javascript: void(0);" class="text-body fw-medium">@item.CareerTitle</a>
                                        </td>

                                        <td class="client_name"><span class="badge bg-primary-subtle text-primary p-2">@Html.DisplayFor(modelItem => item.tblBlogPriority.Priority)</span></td>


                                        <td class="priority">
                                            @{
                                                if (item.IsActive == true)
                                                {
                                                    <span class="badge bg-danger text-uppercase">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger text-uppercase">In-Active</span>
                                                }
                                            }
                                        </td>
                                        <td class="due_date">@item.PublishDate</td>
                                        <td>
                                            <div class="flex-shrink-0 ms-4">
                                                <ul class="list-inline tasks-list-menu mb-0">
                                                    <li class="list-inline-item"><a href="@Url.Action("careerDetail", "Home", new { id = item.CareerId })"><i class="ri-eye-fill align-bottom me-2 text-muted"></i></a></li>
                                                    <li class="list-inline-item"><a class="edit-item-btn" href="@Url.Action("career", "Home", new { id = item.CareerId })"><i class="ri-pencil-fill align-bottom me-2 text-muted"></i></a></li>
                                                    <li class="list-inline-item"><a class="remove-item-btn" data-bs-toggle="modal" href="#deleteOrder" onclick="getBlogId(@item.CareerId)"><i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i></a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                                }
                                }
                        </tbody>
                    </table>
                    <!--end table-->
                    <div class="noresult" style="display: none">
                        <div class="text-center">
                            <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px"></lord-icon>
                            <h5 class="mt-2">Sorry! No Result Found</h5>
                            <p class="text-muted mb-0">We've searched more than 200k+ tasks We did not find any tasks for you search.</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-2">
                    <div class="pagination-wrap hstack gap-2">
                        <a class="page-item pagination-prev disabled" href="#">
                            Previous
                        </a>
                        <ul class="pagination listjs-pagination mb-0"></ul>
                        <a class="page-item pagination-next" href="#">
                            Next
                        </a>
                    </div>
                </div>
            </div>
            <!--end card-body-->
        </div>
        <!--end card-->
    </div>
    <!--end col-->
</div>
<!--end row-->

<div class="modal fade flip" id="deleteOrder" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-5 text-center">
                <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#405189,secondary:#f06548" style="width:90px;height:90px"></lord-icon>
                <div class="mt-4 text-center">
                    <h4>You are about to delete a blog ?</h4>
                    <p class="text-muted fs-14 mb-4">
                        Deleting your blog will remove all of
                        your information from our database.
                    </p>
                    <div class="hstack gap-2 justify-content-center remove">
                        <button class="btn btn-link btn-ghost-primary fw-medium text-decoration-none" id="deleteRecord-close" data-bs-dismiss="modal"><i class="ri-close-line me-1 align-middle"></i> Close</button>
                        <button class="btn btn-info" id="delete-record">Yes, Delete It</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/admin/js/jquery-3.2.1.min.js"></script>
<script>
    $(document).ready(function () {

        $(".ul li a").removeClass("active");
        $('#blogs').addClass('active');
        $('#sidebarblog').addClass('show');
        $('#blog').addClass('active');
    });

    var careerId;

    function getBlogId(id) {
        console.log(id);
        careerId = id;
        return id;

    }
    //soft-delete code career data
    document.getElementById('delete-record').addEventListener("click", function() {
    // Assuming you have a way to get the BlogId, for example from a data attribute
       // var blogId = blogId

        alert(careerId);

    $.ajax({
        type: "POST",
        url: '@Url.Action("careerDelete", "Home")',
        data: {
            CareerId: careerId,
        },
        success: function(data) {
            if (data.success) {
                alert("data deleted")
                window.location.href = '@Url.Action("careerList", "Home")';
            } else {
                alert("Blog Data Not Deleted");
                //$('#datanotupdatecheckbox').show();
                //$('#datanotupdatecheckbox').fadeOut(3000);
            }
        },
        error: function(err) {
            console.log(err);
            // Handle error if needed
            alert("An unexpected error occurred");
        }
    });
});

    //Search bar code
    $(document).ready(function () {
        // Event handler for the search input
        $('#search-career').on('input', function () {
            var searchText = $(this).val().toLowerCase();
            //console.log(searchText);
            // Loop through each row in the table
            $('#careerTable tr').each(function () {
                var text = $(this).text().toLowerCase();
                var isVisible = text.includes(searchText);
                //console.log(isVisible);
                $(this).toggle(isVisible);
            });
        });
    });

    //for status
    $(document).ready(function () {
        // Store the original state of the table rows
        var originalRows = $(".career-row").clone();

        // Handle dropdown change event
        $("#idStatus").change(function () {
            var selectedStatus = $(this).val().toLowerCase(); // Convert to lowercase for case-insensitive comparison
            console.log(selectedStatus);
            // Show all rows if "All" is selected
            if (selectedStatus === "all") {
                $("#careerTable").html(originalRows.clone());
            } else {
                // Filter rows based on selected status
                $(".career-row").each(function () {
                    var rowStatus = $(this).find(".priority span").text().toLowerCase(); // Change to the correct class for status
                    console.log(rowStatus);
                    // Adjusted logic based on the values of "true" and "false"
                    if ((selectedStatus === "true" && rowStatus === "active") ||
                        (selectedStatus === "false" && rowStatus === "in-active")) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }
        });
    });


</script>