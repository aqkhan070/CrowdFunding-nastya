﻿@model List<CrowdFunding_nastya.Models.tblCareer>

@{
    ViewBag.Title = "careerAllList";
    //Layout = "~/Views/Shared/_Admin.cshtml";
}
<head>
    <script src="~/assets/assets/js/aos.js"></script>
</head>
<!--  Banner START -->
<div class="banner">
    <div class="banner__overlay">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center text-lg-start">
                    <h1 class="global__title global__title-dark text-capitalize">Careers</h1>
                    <ul class="banner__ul">
                        <li class="banner__ul-list p-0">
                            <a class="banner__ul-link" href="@Url.Action("index","Home")">
                                Home
                            </a>
                        </li>
                        <li class="banner__ul-list">
                            Career
                        </li>
                    </ul>
                </div>
            </div>
            <div class="banner__element d-none d-lg-block">
                <img src="~/assets/assets/img/element-3.svg" alt="image">
            </div>
            <div class="banner__polygon d-none d-lg-block">
                <img src="~/assets/assets/img/polygon.svg" alt="image">
            </div>
        </div>
    </div>
</div>

<!--  Banner END -->
<!--  Blog START -->

<div class="blog global__py pt-0">
    <div class="container p-sm-0">
        <div class="blog__grid">
            @foreach (var item in Model)
            {
                <div class="card blog__card text-start m-0" data-aos="fade-down" data-aos-duration="1000">
                    <a href="@Url.Action("careerDetail","Home" , new {id = item.CareerId})">
                        <img class="img-fluid w-100" src="@item.CareerThumbnailImage" alt="image" >
                    </a>
                    <div class="card-body px-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                           
                            <div class="">
                                <span class="blog__card-span">@(item.tblCategory != null? item.tblCategory.CategoryName: "")</span>
                            </div>
                            <hr class="blog__card-line">
                            <div class="">
                                <span class="blog__card-span">@item.PublishDate.ToString("yyyy-MM-dd")</span>
                            </div>
                        </div>
                        <div class="">
                            <a href="@Url.Action("blog_detail","Home", new {id = item.CareerId})" class="blog__title">
                                @item.CareerTitle
                            </a>
                            @*<p class="global__desc blog__desc">
                                @Html.Raw(item.CareerDescription)
                            </p>*@
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-12 text-center">
            <button class="blog__btn">see more</button>
        </div>
    </div>
</div>

<!--  Blog END -->