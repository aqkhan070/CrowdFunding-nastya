@using CrowdFunding_nastya.Models;
@model CrowdFunding_nastya.Models.tblEditPage
<div class="banner">
    <div class="banner__overlay">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center text-lg-start">
                    <h1 class="global__title global__title-dark text-capitalize">contact us</h1>
                    <ul class="banner__ul">
                        <li class="banner__ul-list p-0">
                            <a class="banner__ul-link" href="@Url.Action("index","Home")">
                                Home
                            </a>
                        </li>
                        <li class="banner__ul-list">
                            Contact Us
                        </li>
                    </ul>
                </div>
            </div>
            <div class="banner__element d-none d-lg-block">
                <img src="~/assets/assets/img/element-3.svg" alt="image">
            </div>
            <div class="banner__polygon d-none d-lg-block">
                <img src="~/assets/assets/img/polygon.svg" alt="image">
            </div>
        </div>
    </div>
</div>

<!--  Banner END -->
<!--  Social START -->

<div class="social global__py pt-0">
    <div class="container p-sm-0">
        <div class="row justify-content-center gap-5 gap-lg-0">
            <div class="col-12 col-sm-10 col-lg-4">
                <div class="social__body">
                    <div class="">
                        <div class="social__body--loc"></div>
                        <div class="social__i">
                            <img class="" src="~/assets/assets/img/location-i.svg" alt="image">
                        </div>
                        <div class="">
                            <h4 class="social__text">Our Location</h4>
                            <p class="social__number">@Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-10 col-lg-4">
                <div class="social__body">
                    <div class="">
                        <div class="social__body--con"></div>
                        <div class="social__i">
                            <img class="" src="~/assets/assets/img/phone-icon.svg" alt="image">
                        </div>
                        <div class="">
                            <h4 class="social__text">Our Contact</h4>
                            <p class="social__number">@Model.Phone</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-10 col-lg-4">
                <div class="social__body">
                    <div class="">
                        <div class="social__body--mail"></div>
                        <div class="social__i">
                            <img class="" src="~/assets/assets/img/mail-icon.svg" alt="image">
                        </div>
                        <div class="">
                            <h4 class="social__text">Send Mail</h4>
                            <p class="social__number">@Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--  Social END -->
<!--  Contact START -->

<div class="contact global__py pt-0">
    <div class="container p-sm-0">
        <div class="row">
            <form action="#" method="POST" class="contact__form">
                <div class="col-12 col-md-9 col-lg-6 text-center m-auto">
                    <h3 class="global__text">contact us</h3>
                    <h2 class="global__heading">
                        Get in Touch With Us
                    </h2>
                </div>
          
                <div class="contact__form-body">
                    <div class="">
                        <input id="name" class="contact__form-inp form-control" type="text"
                               placeholder="Enter Your Name">
                        <div class="">

                            <span class="sign__text sign__text-name--required text-danger" style="display:none" id="text-name">
                                Name
                                is
                                required
                            </span>
                        </div>
                    </div>
                    <div class="">
                        <input id="email" class="contact__form-inp form-control" type="email"
                               placeholder="Enter Your Email">
                        <div class="">
                            <span class="sign__text sign__text-email text-danger" style="display:none" id="text-email1">
                                Email must
                                be
                                valid
                            </span>
                            <span class="sign__text sign__text-email--required text-danger"  style="display:none" id="text-email">
                                Email
                                is
                                required
                            </span>
                        </div>
                    </div>
                    <div class="">
                        <input id="phone" class="contact__form-inp form-control" type="tel"
                               placeholder="Enter Phone Number">
                        <div class="">
                            <span class="sign__text sign__text-phn--required text-danger"  style="display:none" id="text-phn">
                                Phone number
                                is
                                required
                            </span>
                        </div>
                    </div>
                    <div class="">
                        <input id="subject" class="contact__form-inp form-control" type="text"
                               placeholder="Subject">
                        <div class="">
                            <span class="sign__text sign__text-phn--required text-danger"  style="display:none" id="text-sub">
                                Subject
                                is
                                required
                            </span>
                        </div>
                    </div>
                    <div class="contact__form-body--comnt">
                        <textarea class="contact__form-inp form-control" id="message" cols="30" rows="5"
                                  placeholder="Write Your Message"></textarea>
                        <span class="sign__text sign__text-msg--required text-danger"  style="display:none" id="text-msg">
                            Message
                            is
                            required
                        </span>
                    </div>
                    <div style="display:none;" class="alert alert-success alert-dismissible fade show" id="SuccessAlert" role="alert">
                        <strong>Success! </strong> Your message has been sent. Thank you!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <div style="display:none;" class="alert alert-danger alert-dismissible fade show" id="FailureAlert" role="alert">
                        <strong>Alert! </strong> There is something issue. Please Try again.<br> Thank you!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <div class="">
                        <input class="donation__btn global__btn mt-0" type="button" id="btnsendcontact" onclick="sendcontact()" value="Send Message">
                    </div>
                </div>
                </form>
        </div>
    </div>
</div>
<script src="~/assets/admin/js/jquery-3.2.1.min.js"></script>
<script>

        function sendcontact()
        {
            var i = 0;
            var name = $("#name").val();
            var email = $("#email").val();
            var subject = $("#subject").val();
            var phone = $("#phone").val();
            var message = $("#message").val();
            $("#name").removeClass("is-invalid");
            $("#email").removeClass("is-invalid");
            $("#subject").removeClass("is-invalid");
            $("#phone").removeClass("is-invalid");
            $("#message").removeClass("is-invalid");

            $("#text-name").fadeOut();
            $("#text-email").fadeOut();
            $("#text-phn").fadeOut();
            $("#text-sub").fadeOut();
            $("#text-msg").fadeOut();
            $("#text-email1").fadeOut();

            $("#email").removeClass("is-valid");
            $("#email").removeClass("is-invalid");
            $("#email").addClass("is-valid");

            if (name.trim() == "" ) {
                $("#text-name").fadeIn();
                $("#name").addClass("is-invalid");
                i = 1;
            }
            if (email.trim() == "" ) {
                $("#text-email").fadeIn();
                $("#email").addClass("is-invalid");
                i = 1;
            }
            if (subject.trim() == "" ) {
                $("#text-sub").fadeIn();
                $("#subject").addClass("is-invalid");
                i = 1;
            }


            if ( phone.trim() == "") {
                $("#text-phn").fadeIn();
                $("#phone").addClass("is-invalid");
                i = 1;

            }
           if ( message.trim() == "") {
               $("#text-msg").fadeIn();
               $("#message").addClass("is-invalid");
               i = 1;
            }




                var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
                if (!expr.test(email)) {
                    $("#text-email1").fadeIn();
                    $("#email").removeClass("is-valid");
                    $("#email").removeClass("is-invalid");
                    $("#email").addClass("is-invalid");
                    i = 1;
                }



            if (i == 0) {

                document.getElementById("btnsendcontact").innerHTML = " <img id='LoginLoader' style='Width: 34px!important; height: 30px!important' src='/assets/assets/img/loaders.gif' /> &nbsp; Please Wait...";
                document.getElementById("btnsendcontact").style.backgroundColor = 'black';
                document.getElementById("btnsendcontact").style.borderColor = "black";
                document.getElementById("btnsendcontact").disabled = true;
                document.getElementById("btnsendcontact").style.boxShadow = "0 0.125rem 0.25rem 0 rgb(0,0,0)";



                var UserInfo = {};
                UserInfo.email = email;
                UserInfo.name = name;
                UserInfo.subject = subject;
                UserInfo.message = message;
                UserInfo.phone = phone;

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Contact", "Home")',
                    data: JSON.stringify(UserInfo),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {

                        if (result.status == "1") {
                            $("#SuccessAlert").show();
                            $("#FailureAlert").hide();
                        }
                        else {
                            $("#SuccessAlert").hide();
                            $("#FailureAlert").show();
                        }


                        document.getElementById("btnsendcontact").innerHTML = "Send Message";
                        document.getElementById("btnsendcontact").style.backgroundColor = '#47b2e4';
                        document.getElementById("btnsendcontact").style.borderColor = "#47b2e4";

                        document.getElementById("btnsendcontact").disabled = false;

                        $("#name").val("");
                        $("#email").val("");
                        $("#subject").val("");
                        $("#phone").val("");
                        $("#message").val("");
                    }
                });
            }
        }
</script>