@model List<CrowdFunding_nastya.Models.tblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";

    string Success = @ViewBag.Success;
    string Update = @ViewBag.Update;
    string Delete = @ViewBag.Delete;
    string Error = @ViewBag.Error;
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Compaigns</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Compaigns</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">


    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-semibold text-muted mb-0">Total Compaign</p>
                        <h2 class="mt-4 ff-secondary fw-semibold"><span class="counter-value" data-target="@Model.Count()"></span></h2>
                    </div>
                    <div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-4">
                                <i class="bx bx-server text-primary"></i>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-semibold text-muted mb-0">Active Compaign</p>
                        <h2 class="mt-4 ff-secondary fw-semibold"><span class="counter-value" data-target="@Model.Where(x => x.isActive != false).Count()"></span></h2>
                    </div>
                    <div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-success-subtle text-success rounded-circle fs-4">
                                <i class="bx bx-server text-success"></i>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-semibold text-muted mb-0">In-Active Compaign</p>
                        <h2 class="mt-4 ff-secondary fw-semibold"><span class="counter-value" data-target="@Model.Where(x => x.isActive == false).Count()"></span></h2>
                    </div>
                    <div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-4">
                                <i class="bx bx-server text-danger"></i>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card" id="tasksList">
            <div class="card-header border-0">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Compaign</h5>
                    <div class="flex-shrink-0">
                        <div class="d-flex flex-wrap gap-2">
                            <a href="@Url.Action("add","Project")">  <button class="btn btn-primary add-btn"><i class="ri-add-line align-bottom me-1"></i> Create New</button></a>
                            <button class="btn btn-soft-danger" id="remove-actions" onClick="deleteMultiple()"><i class="ri-delete-bin-2-line"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="">
                <form>
                    <div class="row g-3">
                        <div class="col-xxl-5 col-sm-12">
                            <div class="alert alert-success alert-dismissible fade show" role="alert" id="SuccessAlert" style="display:none;">
                                <strong> Success! </strong> @Success
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                            <div class="alert alert-secondary alert-dismissible fade show" role="alert" id="UpdateAlert" style="display:none;">
                                <strong> Success! </strong> @Update
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert" id="DeleteAlert" style="display:none;">
                                <strong> Success! </strong> @Delete
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="ErrorAlert" style="display:none;">
                                <strong> Error! </strong> @Error
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                        <!--end col-->



                       
                        <!--end col-->
                        <!--end col-->
                    </div>
                    <!--end row-->
                </form>
            </div>
            <!--end card-body-->
            <div class="card-body">
                <div class="table-responsive table-card mb-4">
                    <table class="table align-middle table-nowrap mb-0" id="tasksTable">
                        <thead class="table-light text-muted">
                            <tr>
                                @*<th scope="col" style="width: 40px;">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkAll" value="option">
            </div>
        </th>*@
                                @*<th class="sort" data-sort="id">ID</th>*@
                                <th class="sort" data-sort="id" hidden>Project Id</th>
                                <th class="sort" data-sort="project_name">Name</th>
                                <th class="sort" data-sort="tasks_name">Value($) </th>
                                <th class="sort" data-sort="tasks_name">Raised value($) </th>
                                <th class="sort" data-sort="due_date">Priority</th>
                                <th class="sort" data-sort="due_date">Details</th>
                                <th class="sort" data-sort="status">Status</th>
                                @*<th class="sort" data-sort="status">Due Date</th>*@
                                <th class="sort" data-sort="status">Action</th>
                            </tr>
                        </thead>
                        <tbody class="list form-check-all">
                            @foreach (var item in Model)
                            {
                            <tr>
                                @*<th scope="row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="chk_child" value="option1">
            </div>
        </th>*@
                                <td class="id" hidden>@item.ProjectId</td>
                                <td>
                                    <img src="@item.ImagePath" alt="" class="avatar-xs rounded-circle me-2">
                                    <a href="@Url.Action("preview","Home",new {id=item.ProjectId })" class="text-body fw-medium">@item.Title</a>
                                </td>
                                <td>
                                    <div class="text-nowrap">@item.Value</div>
                                </td>
                                <td>
                                    <div class="text-nowrap">@item.RaisedAmount</div>
                                </td>
                                <td class="client_name"><span class="badge bg-primary-subtle text-primary p-2">@(item.tblPriority==null? "":@item.tblPriority.Priority)</span></td>
                                <td class="priority"><a href="@Url.Action("details","Project",new { id=item.ProjectId})"><span class="badge bg-info text-uppercase">Details</span></a></td>

                                @if (item.isActive == true)
                                {
                                    <td class="priority"><span class="badge bg-success text-uppercase">Active</span></td>
                                }
                                else
                                {
                                    <td class="priority"><span class="badge bg-danger text-uppercase">In-Active</span></td>
                                }
                                @*<td class="due_date"> @item.Deadline</td>*@
                                <td>
                                    <div class="flex-shrink-0 ms-4">
                                        <ul class="list-inline tasks-list-menu mb-0">
                                            <li class="list-inline-item"><a href="@Url.Action("preview","Home",new {id=item.ProjectId })"><i class="ri-eye-fill align-bottom me-2 text-muted"></i></a></li>
                                            <li class="list-inline-item"><a class="edit-item-btn" href="@Url.Action("add","Project",new {id=item.ProjectId })"><i class="ri-pencil-fill align-bottom me-2 text-muted"></i></a></li>
                                            <li class="list-inline-item" onclick="Delete(@item.ProjectId)">
                                                <a class="remove-item-btn" data-bs-toggle="modal" href="#deleteOrder">
                                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            }
                            @*<tr>
                                <th scope="row">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="chk_child" value="option1">
                                    </div>
                                </th>
                                <td class="id"><a href="apps-tasks-details.html" class="fw-medium link-primary">#VLZ501</a></td>
                                <td>
                                    <img src="~/assets/admin/images/users/avatar-1.jpg" alt="" class="avatar-xs rounded-circle me-2">
                                    <a href="#javascript: void(0);" class="text-body fw-medium">Donald Risher</a>
                                </td>
                                <td>
                                    <div class="text-nowrap">$100.1K</div>
                                </td>
                                <td class="client_name"><span class="badge bg-primary-subtle text-primary p-2">High</span></td>


                                <td class="priority"><span class="badge bg-danger text-uppercase">In-Active</span></td>
                                <td class="due_date">25 Jan, 2022</td>
                                <td>
                                    <div class="flex-shrink-0 ms-4">
                                        <ul class="list-inline tasks-list-menu mb-0">
                                            <li class="list-inline-item"><a href="@Url.Action("add","Project")"><i class="ri-eye-fill align-bottom me-2 text-muted"></i></a></li>
                                            <li class="list-inline-item"><a class="edit-item-btn" href="@Url.Action("add","Project")"><i class="ri-pencil-fill align-bottom me-2 text-muted"></i></a></li>
                                            <li class="list-inline-item">
                                                <a class="remove-item-btn" data-bs-toggle="modal" href="#deleteOrder">
                                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>*@
                        </tbody>
                    </table>
                    <!--end table-->
                    <div class="noresult" style="display: none">
                        <div class="text-center">
                            <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px"></lord-icon>
                            <h5 class="mt-2">Sorry! No Result Found</h5>
                            <p class="text-muted mb-0">We've searched more than 200k+ tasks We did not find any tasks for you search.</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-2">
                    <div class="pagination-wrap hstack gap-2">
                        <a class="page-item pagination-prev disabled" href="#">
                            Previous
                        </a>
                        <ul class="pagination listjs-pagination mb-0"></ul>
                        <a class="page-item pagination-next" href="#">
                            Next
                        </a>
                    </div>
                </div>
            </div>
            <!--end card-body-->
        </div>
        <!--end card-->
    </div>
    <!--end col-->
</div>
<!--end row-->

<div class="modal fade flip" id="deleteOrder" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-5 text-center">
                <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#405189,secondary:#f06548" style="width:90px;height:90px"></lord-icon>
                <div class="mt-4 text-center">
                    <h4>You are about to delete a project ?</h4>
                    <p class="text-muted fs-14 mb-4">
                        Deleting your project will remove all of
                        your information from our database.
                    </p>
                    @using (Html.BeginForm("delete", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {@Html.AntiForgeryToken()
                    <div class="hstack gap-2 justify-content-center remove">
                        <input type="text" name="Id" id="DeleteId" value="" hidden />
                        <button class="btn btn-link btn-ghost-primary fw-medium text-decoration-none" id="deleteRecord-close" data-bs-dismiss="modal"><i class="ri-close-line me-1 align-middle"></i> Close</button>
                        <button class="btn btn-info" id="delete-record">Yes, Delete It</button>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/admin/js/jquery-3.2.1.min.js"></script>
<script>
    function Delete(Id) {
        $("#DeleteId").val(Id);
    }

    $(document).ready(function () {
         if ("@Success" != "") {
            $('#SuccessAlert').fadeIn();
            $('#SuccessAlert').fadeOut(10000);
         }
        else {
            $('#SuccessAlert').fadeOut();
        }
        if ("@Update" != "") {
           $('#UpdateAlert').fadeIn();
           $('#UpdateAlert').fadeOut(10000);
         }
        else {
             $('#UpdateAlert').fadeOut();
        }
        if ("@Delete" != "") {
            $('#DeleteAlert').fadeIn();
            $('#DeleteAlert').fadeOut(10000);
         }
        else {
            $('#DeleteAlert').fadeOut();
        }
        if ("@Error" != "") {
            $('#ErrorAlert').fadeIn();
            $('#ErrorAlert').fadeOut(10000);
         }
        else {
            $('#ErrorAlert').fadeOut();
        }


        $(".ul li a").removeClass("active");
        $('#projects').addClass('active');
        $('#sidebarproject').addClass('show');
        $('#project').addClass('active');



    });
</script>