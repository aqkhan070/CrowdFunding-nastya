                                                    </div>
                                                   
                                                    <div class="tab-pane fade" id="project-team" role="tabpanel">
                                                     

                                                        <div class="team-list list-view-filter">

                                                            @foreach (tblTransaction item in ViewBag.TransactionData)
                                                            {
                                               

                                                            <div class="card team-box">


                                                                <div class="card-body px-4">
                                                                    <div class="row align-items-center team-row">
                                                                   
                                                                        <div class="col-lg-4 col">
                                                                            <div class="team-profile-img">
                                                                                <div class="avatar-lg img-thumbnail rounded-circle">
                                                                                    @if (item.UserId != null)
                                                                                    {
                                                                                <img src="@item.tblUser.ImagePath" alt="image" class="img-fluid d-block rounded-circle" /> }
                                                                            else
                                                                            {
                                                                                <div class="avatar-title bg-danger-subtle text-danger rounded-circle">
                                                                                    A
                                                                                </div>}
                                                                                    
                                                                                </div>
                                                                                <div class="team-content">
                                                                                    <a href="#" class="d-block">
                                                                                        <h5 class="fs-16 mb-1">@(item.UserFirstName!=""? "Anonymous" : item.UserFirstName+" "+ item.UserLastName)</h5>
                                                                                    </a>
                                                                                    <p class="text-muted mb-0">@item.UserEmail</p>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-lg-4 col">
                                                                            <div class="row text-muted text-center">
                                                                                <div class="col-6 border-end border-end-dashed">
                                                                                    <h5 class="mb-1">@item.Amount</h5>
                                                                                    <p class="text-muted mb-0">Amount</p>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <h5 class="mb-1">Date</h5>
                                                                                    <p class="text-muted mb-0">@item.PaymentDateTime</p>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                      
                                                                    </div>
                                                                </div>

                                                              
                                                            </div>}



                                                          
