
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="error">
    <div class="container p-sm-0">
        <div class="row text-center">
            <img class="img-fluid" src="~/assets/assets/img/404.png" alt="404 image">
            <div class="">
                <h2 class="global__heading error__m">Whoops! That page doesn’t exist.</h2>
                <p class="global__desc">The page you requested could not be found</p>
                <a href="@Url.Action("Index","Home")" class="global__btn text-decoration-none">
                    <i class="fa-solid fa-arrow-left me-2"></i> Back To Homepage
                </a>
            </div>
        </div>
    </div>
</div>

