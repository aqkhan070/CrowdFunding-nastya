<!-- SignIn START -->

@using CrowdFunding_nastya.Models;
@{ 
    List<tblRole> Roles = (List<tblRole>)ViewBag.Roles;
    string Success = @ViewBag.Success;
    string Update = @ViewBag.Update;
    string Delete = @ViewBag.Delete;
    string Error = @ViewBag.Error;
}


<div class="donate global__py pt-5">
    <div class="container p-sm-0">
       
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="alert alert-success alert-dismissible fade show" role="alert" id="SuccessAlert" style="display:none;">
                    <strong> Success! </strong> @Success
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="alert alert-secondary alert-dismissible fade show" role="alert" id="UpdateAlert" style="display:none;">
                    <strong> Success! </strong> @Update
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="alert alert-warning alert-dismissible fade show" role="alert" id="DeleteAlert" style="display:none;">
                    <strong> Success! </strong> @Delete
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="alert alert-danger alert-dismissible fade show" role="alert" id="ErrorAlert" style="display:none;">
                    <strong> Error! </strong> @Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <!-- Form -->
                <div class="">

                    <form action="@Url.Action("sign_up","Account")" method="POST" enctype="multipart/form-data" class="form mt-0 border-0" id="myForm">
                        <div class="row" id="first">
                            <h4 class="sign__form-heading">Sign Up</h4>
                            <div class="col-md-6">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="firstnameInp" id="email">
                                        First Name <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input" id="firstnameInp" name="FirstName" type="text"
                                           placeholder="Enter your first name" required>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="lastnameInp">
                                        Last Name <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input" id="lastnameInp" name="LastName" type="text"
                                           placeholder="Enter your last name" required>

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="RoleId">
                                        Sign up as <span class="text-danger">*</span>
                                    </label>
                                    <select class="form-control sign__form-input" id="RoleId" name="RoleId" onchange="ChangeRole()" required>
                                        @foreach (var item in Roles)
                                        {
                                            <option value="@item.RoleId">@item.Role</option>
                                        }
                                    </select>

                                </div>
                            </div>
                            <div class="">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="emailInp" id="email">
                                        Email <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input" id="emailInp" name="Email" type="email"
                                           placeholder="Enter your email">
                                    <span class="sign__text sign__text-email text-danger d-none">Email must be valid</span>
                                    <span class="sign__text sign__text-email--required text-danger d-none">
                                        Email is
                                        required
                                    </span>
                                </div>
                                <div class="">
                                    <label class="sign__form-label" for="">
                                        Password <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input" id="" name="Password"
                                           type="password" placeholder="Create a Password" required>
                                    <div class="">
                                        <span class="sign__text sign__text-pass text-danger d-none">
                                            Password must be 3 to 5
                                            characters long
                                        </span>
                                        <span class="sign__text sign__text-pass--required text-danger d-none">
                                            Password is
                                            required
                                        </span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
                                    <label class="sign__form-rem">
                                        <input type="checkbox" id="checkbox" name="checkbox" required>
                                        <span class="sign__form-rem--checkmark sign__text"></span>
                                        By continuing, you agree to the My Business Shower <a href="@Url.Action("legal", "Home")">
                                            terms
                                        </a>and acknowledge receipt of
                                        our <a href="@Url.Action("privacy", "Home")"> privacy notice</a>.
                                    </label>

                                </div>


                            </div>
                            <div class="col-10 col-sm-12 m-auto" id="NextButton">
                                <div class="">
                                    <input class="sign__btn sign__btn-in form-control" type="button"
                                           value="Next" onclick="nextpart(1)">
                                </div>

                            </div>
                            <div class="col-10 col-sm-12 m-auto" id="SubmitButton" onclick="Check()" style="display:none;">
                                <div class="">
                                    <button class="sign__btn sign__btn-in form-control" type="submit"> Submit</button>
                                </div>

                            </div>
                        </div>

                        <div class="row" id="second" style="display:none">
                            <div class="col-md-6">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="locatedInp">
                                        Where is your business located? <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input RequiredFields" id="locatedInp" name="Located" type="text" required>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="postcodeInp">
                                        Post code<span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input RequiredFields" id="postcodeInp" name="PostCode" type="text"
                                           placeholder="post code" required>

                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="fundraisingforInp">
                                        Are you fundraising for your actual business or you are
                                        starting now? <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input RequiredFields" id="fundraisingforInp" name="FundraisingFor" type="text" required>

                                </div>

                                <div class="mt-2">
                                    <label class="sign__form-label" for="PhoneInp">
                                        What' s your telephone number? (keep your account safe)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input RequiredFields" id="PhoneInp" name="Phone"
                                           type="text" required>

                                </div>
                                <div class="mt-2">
                                    <label class="sign__form-label" for="testFive">
                                        Send verification code
                                        <span class="text-danger">*</span>
                                    </label>
                                    <ul class="form__ul">
                                        <li class="bg-transparent py-0 ps-0">
                                            <label class="form__ul-label form__ul-label--pointer">
                                                <span class="form__ul-div d-block px-0">
                                                    <input type="radio" id="testFive" name="VerificationCodeTo" value="Text message">
                                                    <span class="form__ul-label--checkmark" style="left: 0;"></span>
                                                    Text message
                                                </span>
                                            </label>
                                        </li>
                                        <li class="bg-transparent py-0 ps-0">
                                            <label class="form__ul-label form__ul-label--pointer">
                                                <span class="form__ul-div d-block px-0">
                                                    <input type="radio" id="testSix" name="VerificationCodeTo" value="Voice call">
                                                    <span class="form__ul-label--checkmark" style="left: 0;"></span>
                                                    Voice call
                                                </span>
                                            </label>
                                        </li>
                                    </ul>

                                </div>
                                <div class="mt-2">
                                    <label class="form__ul-label form__ul-label--lg ps-0" for="comment">
                                        Describe your business/start up?
                                    </label>
                                    <textarea class="form-control form__input" id="comment" cols="30" rows="5" name="Description"></textarea>
                                </div>
                                <div class="mt-2">
                                    <label class="form__ul-label form__ul-label--lg ps-0" for="ProjectImage">
                                        Upload photo/video?
                                    </label>
                                    <input class="form-control sign__form-input" type="file" id="ProjectImage" name="ProjectImage">
                                </div>
                                <div class="mt-2">
                                    <label class="sign__form-label" for="TitleInp">
                                        Name your Business Shower
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input RequiredFields" id="TitleInp" name="Title"
                                           type="text" required>

                                </div>
                                <div class="mt-2">
                                    <label class="sign__form-label" for="story">
                                        What is your story? How does that business aligns with
                                        you? What is the mission and vision behind it? (up to
                                        1500 words)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <textarea class="form-control form__input RequiredFields" id="story" name="story" cols="30" rows="5" required></textarea>

                                </div>
                                <div class="mt-2">
                                    <label class="sign__form-label" for="ValueInp">
                                        What is your Business Shower goal? How much would you
                                        need to raise?
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input RequiredFields" id="ValueInp" name="Value"
                                           type="number" required>

                                </div>
                            </div>
                            <div class="col-6 col-sm-6 m-auto">
                                <div class="">
                                    <input class="sign__btn sign__btn-in form-control" type="button"
                                           value="Back" onclick="backpart(1)">
                                </div>

                            </div>
                            <div class="col-6 col-sm-6 m-auto">
                                <div class="">
                                    <input class="sign__btn sign__btn-in form-control" type="submit"
                                           value="Create bussiness ">
                                </div>

                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <!-- Right Sider_Bar   -->
            <div class="col-12 col-sm-8 col-lg-4 d-none d-lg-block">

                <div class="volunteer__requirement">
                    <h3 class="volunteer__text">Our Requirements</h3>
                    <p class="volunteer__desc">
                        consectetur adipiscing elit. Etiam eu turpis molestie, dictum est
                        a,
                        mattis tellus. Sed dignissim, metus nec fringilla
                        accumsan, risus sem sollicitudin lacus, ut interdum tellus elit sed risus. Maecenas eget
                        condimentum velit, sit amet
                        feugiat lectus.
                    </p>
                    <p class="volunteer__desc mt-2">
                        consectetur adipiscing elit. Etiam eu turpis molestie,
                        dictum
                        est a, mattis tellus. Sed dignissim, metus nec fringilla
                        accumsan,
                    </p>
                    <div class="">
                        <ul class="volunteer__list">
                            <li>
                                <img class="img-fluid" src="~/assets/assets/img/check.svg" alt="image">
                                Volunteers need to be able to a strong work ethic.
                            </li>
                            <li class="mb-0">
                                <img class="img-fluid" src="~/assets/assets/img/check.svg" alt="image">
                                Volunteers need to be able to a strong work ethic.
                            </li>
                        </ul>
                        <ul class="volunteer__list mb-0">
                            <li>
                                <div class="">
                                    <i class="fa fa-phone volunteer__list-i"></i>
                                </div>
                                <div class="">
                                    <span class="volunteer__list-sub">Call Anytime</span>
                                    <h5 class="volunteer__list-content">@ViewBag.EditPage.Phone</h5>
                                </div>
                            </li>
                            <li class="mb-0">
                                <div class="">
                                    <i class="fa fa-envelope-open volunteer__list-i"></i>
                                </div>
                                <div class="">
                                    <span class="volunteer__list-sub">Email Us</span>
                                    <h5 class="volunteer__list-content">@ViewBag.EditPage.Email</h5>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/admin/js/jquery-3.2.1.min.js"></script>
<script>
    function Check() {
        //console.log("Check");
        //$('#myForm').submit();
    }
    function ChangeRole() {
        let RoleId = $("#RoleId").val();
        if (RoleId == 2) {
            $('.RequiredFields').prop('required', true);
            $("#NextButton").show();
            $("#SubmitButton").hide();
        }
        else {
            $('.RequiredFields').prop('required', false);
            $("#SubmitButton").show();
            $("#NextButton").hide();
        }

    }
    function nextpart(id) {
        if (id == 1) {
            $("#first").fadeOut();
            $("#second").fadeIn();
        }

    }
    function backpart(id) {
        if (id == 1) {
            $("#first").fadeIn();
            $("#second").fadeOut();
        }

    }
    $(document).ready(function () {
        if ("@Success" != "") {
            $('#SuccessAlert').fadeIn();
            $('#SuccessAlert').fadeOut(10000);
         }
        else {
            $('#SuccessAlert').fadeOut();
        }
        if ("@Update" != "") {
           $('#UpdateAlert').fadeIn();
           $('#UpdateAlert').fadeOut(10000);
         }
        else {
             $('#UpdateAlert').fadeOut();
        }
        if ("@Delete" != "") {
            $('#DeleteAlert').fadeIn();
            $('#DeleteAlert').fadeOut(10000);
         }
        else {
            $('#DeleteAlert').fadeOut();
        }
        if ("@Error" != "") {
            $('#ErrorAlert').fadeIn();
            $('#ErrorAlert').fadeOut(10000);
         }
        else {
            $('#ErrorAlert').fadeOut();
        }


    });
</script>
