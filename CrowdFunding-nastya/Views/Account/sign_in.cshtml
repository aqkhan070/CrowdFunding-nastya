<!-- SignIn START -->
@{ 
    string Success = @ViewBag.Success;
    string Update = @ViewBag.Update;
    string Delete = @ViewBag.Delete;
    string Error = @ViewBag.Error;
}
<div class="sign mt-4 mt-sm-3 mt-lg-0 mb-5">
    <div class="sign__layer">
        <div class="container-fluid p-4">
           
            <div class="d-md-flex justify-content-between position-relative h-100">

                <div class=" col-md-4 m-auto ">
                
                    <div class="sign__form">
                        <div class="alert alert-success alert-dismissible fade show" role="alert" id="SuccessAlert" style="display:none;">
                            <strong> Success! </strong> @Success
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <div class="alert alert-secondary alert-dismissible fade show" role="alert" id="UpdateAlert" style="display:none;">
                            <strong> Success! </strong> @Update
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert" id="DeleteAlert" style="display:none;">
                            <strong> Success! </strong> @Delete
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="ErrorAlert" style="display:none;">
                            <strong> Error! </strong> @Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        @using (Html.BeginForm("sign_in", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {@Html.AntiForgeryToken()
                                        <form action="#" method="POST" class="">
                                            <h4 class="sign__form-heading">Sign In</h4>
                                            <div class="">
                                                <div class="sign__form-mb">
                                                    <label class="sign__form-label" for="emailInp" id="email">
                                                        Email <span class="text-danger">*</span>
                                                    </label>
                                                    <input class="form-control sign__form-input" id="emailInp" name="Email" type="email"
                                                           placeholder="Enter your email" required>
                                                    <span class="sign__text sign__text-email text-danger d-none">Email must be valid</span>
                                                    <span class="sign__text sign__text-email--required text-danger d-none">
                                                        Email is
                                                        required
                                                    </span>
                                                </div>
                                                <div class="">
                                                    <label class="sign__form-label" for="passwordInp">
                                                        Password <span class="text-danger">*</span>
                                                    </label>
                                                    <input class="form-control sign__form-input" id="passwordInp" name="Password"
                                                           type="password" placeholder="Password" required>
                                                    <div class="">
                                                        <span class="sign__text sign__text-pass text-danger d-none">
                                                            Password must be 3 to 5
                                                            characters long
                                                        </span>
                                                        <span class="sign__text sign__text-pass--required text-danger d-none">
                                                            Password is
                                                            required
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
                                                    <label class="sign__form-rem">
                                                        <input type="checkbox" id="checkbox" name="checkbox">
                                                        <span class="sign__form-rem--checkmark sign__text"></span>
                                                        Remember me
                                                    </label>
                                                    <div class="">
                                                        <a class="sign__form-link" href="@Url.Action("forget_password", "Account")">Forgot password?</a>
                                                    </div>
                                                </div>
                                                <div class="col-10 col-sm-12 m-auto">
                                                    <div class="">
                                                        <input class="sign__btn sign__btn-in form-control" type="submit"
                                                               value="Sign in">
                                                    </div>
                                                    @*<div class="">
                                        <button class="sign__btn sign__btn-up form-control">
                                            <img class="pe-3"
                                                 src="~/assets/assets/img/google-g.svg" alt="image">Sign in
                                            with
                                            Google
                                        </button>
                                    </div>*@
                                                </div>
                                                <div class="mt-3">
                                                    <p class="sign__text text-center">
                                                        Don’t have an account? <a class="sign__form-link" href="@Url.Action("sign_up", "Account")">Sign up</a>
                                                    </p>
                                                </div>
                                            </div>
                                        </form>}
                    </div>

                </div>
                <!--<div class="col-12 col-lg-6 d-none d-lg-block">
            <div class="sign__slider">
                <div class="sign__slider-item">
                    <div class="card sign__card h-100">
                        <img class="img-fluid h-100 sign__card-img" src="~/assets/assets/img/signIn.png"
                             alt="image">-->
                @*<div class="card-img-overlay sign__card-overlay">
                <div class="position-relative">
                    <h5 class="global__heading global__heading-w sign__card-title">
                        Sign in
                        to
                        save
                        and
                        continue
                    </h5>
                </div>
            </div>*@
                <!--</div>
                </div>

            </div>
        </div>-->
            </div>
        </div>
    </div>
</div>
<script src="~/assets/admin/js/jquery-3.2.1.min.js"></script>
<script>
    $(document).ready(function () {
        if ("@Success" != "") {
            $('#SuccessAlert').fadeIn();
            $('#SuccessAlert').fadeOut(10000);
         }
        else {
            $('#SuccessAlert').fadeOut();
        }
        if ("@Update" != "") {
           $('#UpdateAlert').fadeIn();
           $('#UpdateAlert').fadeOut(10000);
         }
        else {
             $('#UpdateAlert').fadeOut();
        }
        if ("@Delete" != "") {
            $('#DeleteAlert').fadeIn();
            $('#DeleteAlert').fadeOut(10000);
         }
        else {
            $('#DeleteAlert').fadeOut();
        }
        if ("@Error" != "") {
            $('#ErrorAlert').fadeIn();
            $('#ErrorAlert').fadeOut(10000);
         }
        else {
            $('#ErrorAlert').fadeOut();
        }


    });
</script>
<!-- SignIn END -->
