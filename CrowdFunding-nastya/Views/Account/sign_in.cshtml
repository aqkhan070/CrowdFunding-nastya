<!-- SignIn START -->
<div class="sign mt-4 mt-sm-3 mt-lg-0 mb-5">
    <div class="sign__layer">
        <div class="container-fluid p-4">
            <div class="d-md-flex justify-content-between position-relative h-100">
    
                <div class=" col-md-4 m-auto " >
                    <div class="sign__form">
                        <form action="#" method="POST" class="">
                            <h4 class="sign__form-heading">Sign In</h4>
                            <div class="">
                                <div class="sign__form-mb">
                                    <label class="sign__form-label" for="emailInp" id="email">
                                        Email <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input" id="emailInp" type="email"
                                           placeholder="Enter your email">
                                    <span class="sign__text sign__text-email text-danger d-none">Email must be valid</span>
                                    <span class="sign__text sign__text-email--required text-danger d-none">
                                        Email is
                                        required
                                    </span>
                                </div>
                                <div class="">
                                    <label class="sign__form-label" for="passwordInp">
                                        Password <span class="text-danger">*</span>
                                    </label>
                                    <input class="form-control sign__form-input" id="passwordInp"
                                           type="password" placeholder="Create a Password">
                                    <div class="">
                                        <span class="sign__text sign__text-pass text-danger d-none">
                                            Password must be 3 to 5
                                            characters long
                                        </span>
                                        <span class="sign__text sign__text-pass--required text-danger d-none">
                                            Password is
                                            required
                                        </span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
                                    <label class="sign__form-rem">
                                        <input type="checkbox" id="checkbox" name="checkbox">
                                        <span class="sign__form-rem--checkmark sign__text"></span>
                                        Remember me
                                    </label>
                                    <div class="">
                                        <a class="sign__form-link" href="@Url.Action("forget_password","Account")">Forgot password?</a>
                                    </div>
                                </div>
                                <div class="col-10 col-sm-12 m-auto">
                                    <div class="">
                                        <input class="sign__btn sign__btn-in form-control" type="submit"
                                               value="Sign in">
                                    </div>
                                    <div class="">
                                        <button class="sign__btn sign__btn-up form-control">
                                            <img class="pe-3"
                                                 src="~/assets/assets/img/google-g.svg" alt="image">Sign in
                                            with
                                            Google
                                        </button>
                                    </div>
                                </div>
                                <div class="">
                                    <p class="sign__text text-center">
                                        Don’t have an account? <a class="sign__form-link" href="@Url.Action("sign_up","Account")">Sign up</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                   
                </div>
